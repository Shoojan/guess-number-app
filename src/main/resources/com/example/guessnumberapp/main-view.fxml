<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guessnumberapp.MainController">
   <center>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/think.png" />
               </image>
               <viewport>
                  <Rectangle2D height="330.0" minX="80.0" minY="70.0" width="330.0" />
               </viewport>
            </ImageView>
            <HBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="numberInputTextField" disable="true" HBox.hgrow="ALWAYS" />
                  <Button fx:id="guessButton" mnemonicParsing="false" onAction="#onGuessButtonClicked" text="Guess">
                     <font>
                        <Font name="Comic Sans MS" size="12.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="hintLabel">
               <font>
                  <Font name="Comic Sans MS Italic" size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <Label fx:id="welcomeLabel" text="Welcome to Number Guessing App" BorderPane.alignment="CENTER">
         <font>
            <Font name="Comic Sans MS Bold" size="20.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="timerLabel" />
            <Label fx:id="countLabel" HBox.hgrow="ALWAYS" />
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#onRestartButtonClicked" text="Start">
               <font>
                  <Font name="Comic Sans MS" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
